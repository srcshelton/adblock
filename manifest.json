{
  "name": "AdBlock",
  "author": "BetaFish",
  "version": "1.8.0.1",
  "background": {
    "page": "compat.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "38": "img/icon40.png"
    },
    "default_title": "AdBlock",
    "default_popup": "button/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mail.live.com/*",
        "*://*.mastertoons.com/*",
        "*://*.getadblock.com/*",
        "*://*.mobilmania.cz/*",
        "*://*.zive.cz/*",
        "*://*.doupe.cz/*",
        "*://*.e15.cz/*",
        "*://*.sportrevue.cz/*",
        "*://*.autorevue.cz/*",
        "*://*.pornhub.com/*",
        "*://*.facebook.com/*"
      ],
      "js": [
        "bandaids.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "compat.js",
        "functions.js",
        "filtering/filteroptions.js",
        "adblock_start_common.js",
        "adblock_start_chrome.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "uiscripts/blacklisting/rightclick_hook.js",
        "notificationoverlay.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "content_security_policy": "default-src 'self'; style-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src *; frame-src 'self' https://chromeadblock.com https://getadblock.com",
  "default_locale": "en",
  "locale": "en",  
  "description": "__MSG_description_edge__",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "incognito": "spanning",
  "manifest_version": 2,
  "minimum_edge_version": "37.14361.0.0",
  "options_page": "options/index.html",
  "permissions": [
    "http://*/*", "https://*/*", "contextMenus", "tabs", "idle", "webRequest", "webRequestBlocking", "webNavigation", "alarms", "storage", "notifications"
  ],
  "web_accessible_resources": [
    "CHANGELOG.txt",
    "img/icon24.png",
    "img/icon48.png",
    "jquery/css/images/ui-bg_inset-hard_100_fcfdfd_1x100.png",
    "jquery/css/images/ui-icons_056b93_256x240.png",
    "jquery/css/images/ui-icons_d8e7f3_256x240.png",
    "jquery/css/jquery-ui.custom.css",
    "jquery/css/override-page.css"
  ]
}